<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>controller.AdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterCustomerController</servlet-name>
        <servlet-class>controller.RegisterCustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterCustomerController</servlet-name>
        <url-pattern>/registerCustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyCustomerController</servlet-name>
        <servlet-class>controller.ModifyCustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyCustomerController</servlet-name>
        <url-pattern>/modifyCustomer</url-pattern>
    </servlet-mapping>
<servlet>
    <servlet-name>ChangePasswordServlet</servlet-name>
    <servlet-class>com.bank.controller.ChangePasswordServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>ChangePasswordServlet</servlet-name>
    <url-pattern>/changePassword</url-pattern>
</servlet-mapping>
<servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.bank.controller.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyCustomerServlet</servlet-name>
        <servlet-class>com.bank.controller.ModifyCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModifyCustomerServlet</servlet-name>
        <url-pattern>/modifyCustomer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>com.bank.controller.TransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/transaction</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CloseAccountServlet</servlet-name>
        <servlet-class>com.bank.controller.CloseAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CloseAccountServlet</servlet-name>
        <url-pattern>/closeAccount</url-pattern>
    </servlet-mapping>
  
    
    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/transaction</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>adminLogin.jsp</welcome-file>
    </welcome-file-list>
</web-app>
